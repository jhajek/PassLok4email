{
    "name": "PassLok for Edge manifest",
    "version": "1.0.5.0",
    "author": "Jeremy R Hajek",
    "browser_action": {
        "default_icon": {
            "20": "icon_20b.png",
            "40": "icon_40b.png"
        },
        "default_title": "PassLok",
        "default_popup": "index.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://mail.google.com/*",
                "http://mail.google.com/*",
                "http://*.mail.yahoo.com/*",
                "https://*.mail.yahoo.com/*",
                "http://*.live.com/*",
                "https://*.live.com/*"
            ],
            "css": [
                "lib/jquery-ui.min.css",
                "src/interface.css"
            ],
            "js": [
                "lib/jquery-2.2.2.min.js",
                "lib/jquery-ui.min.js",
                "lib/nacl.js",
                "lib/ed2curve.js",
                "lib/scrypt-async.js",
                "lib/lz-string.js",
                "src/interface.js",
                "src/crypto.js",
                "src/dictionary_en.js",
                "src/chat.js",
                "src/keylock.js",
                "src/localdir.js",
                "src/switching.js",
                "src/stego.js"
            ],
            "run_at": "document_idle",
            "all_frames": true
        }
    ],
    "content_security_policy": "script-src 'self' https://*.firebaseio.com; object-src 'self'",
    "default_locale": "en",
    "description": "PassLok is a toolkit that implements public key cryptography and steganography to supplement ANY communications program.",
    "options_page": " http://passlok.weebly.com/uploads/2/4/1/8/24187628/passlok_manual.pdf",
    "permissions": [
        "*://*/*",
        "storage",
        "tabs",
        "https://mail.google.com/*",
        "http://mail.google.com/*",
        "https://google.com/*",
        "http://google.com/*",
        "http://*.mail.yahoo.com/*",
        "https://*.mail.yahoo.com/*",
        "http://*.live.com/*",
        "https://*.live.com/*"
    ],
    "background": {
        "page": "background.html",
        "persistent": true
    },
    "icons": {
        "16": "icon_16b.png",
        "48": "icon_48b.png",
        "128": "icon_128b.png"
    },
    "minimum_edge_version": "33.14281.1000.0",
    "web_accessible_resources": [
        "icon_48b.png",
        "lib/images/ui-icons_222222_256x240.png",
        "lib/images/ui-icons_555555_256x240.png",
        "lib/images/ui-icons_777777_256x240.png",
        "lib/images/ui-icons_ef8c08_256x240.png",
        "lib/images/ui-bg_glass_100_f6f6f6_1x400.png",
        "lib/images/ui-bg_diagonals-thick_20_666666_40x40.png"
    ],
    "-ms-preload": {
        "backgroundScript": "backgroundScriptsAPIBridge.js",
        "contentScript": "contentScriptsAPIBridge.js"
    }
}